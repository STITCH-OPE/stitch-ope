        "normalize_grad": true,
        "k_guide": 1,
        "use_action_grad_only": true,
        "clamp" : false,
        "l_inf" : 1,
        "ratio" : 1.0
    },
    "target_policy_paths": [
        "opelab/examples/gym/policy/pendulum/Pi_1.pkl",
        "opelab/examples/gym/policy/pendulum/Pi_2.pkl",
        "opelab/examples/gym/policy/pendulum/Pi_3.pkl",
        "opelab/examples/gym/policy/pendulum/Pi_4.pkl",
        "opelab/examples/gym/policy/pendulum/Pi_5.pkl"
    ],
    "baseline_configs": {
        "Naive": {
            "class": "OnPolicy",
            "params": {}
        },
        "Diffuser": {
            "class": "Diffuser",
            "params": {
                "T": 16,
                "D": 256,
                "num_samples": 100,
                "T_gen": 200,
                "action_dim": 1,
                "state_dim": 3,
                "model_path": "opelab/examples/gym/models/pendulum.pth",
                "guided": true,
                "tanh_action": false,
